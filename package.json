{
	"private": true,
	"workspaces": {
		"packages": [
			"packages/**"
		]
	},
	"scripts": {
		"start": "yarn concurrently \"yarn server:start\" \"yarn client:start\"",
		"server:start": "yarn workspace server start",
		"client:start": "yarn workspace client start",
		"test": "yarn workspace client cy:open",
		"build": "yarn workspaces foreach run build",
		"deploy:logs": "heroku logs --tail -a cryptic-basin-13720"
	},
	"packageManager": "yarn@3.0.2",
	"devDependencies": {
		"concurrently": "^6.3.0"
	}
}
